local player = game.Players.LocalPlayer  -- Get the local player
local resetInterval = 60  -- Time in seconds between each reset

-- Function to reset the player
local function resetPlayer()
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.Health = 0  -- Reset the player by setting health to 0
    end
end

-- Loop to reset the player every 60 seconds
while true do
    wait(resetInterval)  -- Wait for 60 seconds
    resetPlayer()  -- Reset the player
end
